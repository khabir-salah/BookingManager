@model BookingManager.Models.ApartmentDTO

@{
    ViewData["Title"] = "Apartment Details";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card mb-4">
        <div class="row no-gutters">
            <div class="col-md-6">
                <img src="@Model.PrimaryImageUrl" class="card-img" alt="@Model.Name">
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text"><strong>Guests:</strong> @Model.Guests</p>
                    <p class="card-text"><strong>Bedrooms:</strong> @Model.BedRooms</p>
                    <p class="card-text"><strong>Number of Rooms:</strong> @Model.NumberOfRooms</p>
                    <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                    <p class="card-text"><strong>Location:</strong> @Model.City, @Model.State, @Model.Country</p>
                    <p class="card-text"><strong>Facilities:</strong> @string.Join(", ", Model.Facilities)</p>
                </div>
            </div>
        </div>
    </div>

    <h3>Additional Images</h3>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.Images.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>
        <div class="carousel-inner">
            @for (var i = 0; i < Model.Images.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@Model.Images[i]" class="d-block w-100" alt="Image @i">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-ZvpUoO8nNO+gkJbPhekhgfGHKX5lflLPSZ5KO5yEJ7Ul/UOGu5p2vdJxw8AJo0Kl" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4Ag2sfOBi3z/7h1T8fH7lCw2lX8kuh38Gx/t+jPEoxpkNWlM6A1X" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>
}
